<Window x:Class="HeatconERP.Desktop.Views.MainShell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HeatconERP" Height="700" Width="1100" MinHeight="500" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" MinWidth="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#f5f5f5" BorderBrush="#e0e0e0" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="HeatconERP" FontSize="18" FontWeight="SemiBold" 
                           Margin="16,20,16,16"/>
                <ListBox x:Name="NavList" Grid.Row="1" BorderThickness="0" Background="Transparent"
                         SelectionChanged="NavList_SelectionChanged">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="16,12"/>
                            <Setter Property="Margin" Value="8,2"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Border>

        <!-- Main content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="White" BorderBrush="#e0e0e0" BorderThickness="0,0,0,1" Padding="20,12">
                <Grid>
                    <TextBlock x:Name="HeaderTitle" Text="Dashboard" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock x:Name="UserInfo" VerticalAlignment="Center" Margin="0,0,16,0" Foreground="Gray"/>
                        <Button x:Name="LogoutBtn" Content="Logout" Padding="12,6" Click="LogoutBtn_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content area -->
            <Border Grid.Row="1" Background="White" Padding="20">
                <ContentControl x:Name="ContentArea"/>
            </Border>
        </Grid>
    </Grid>
</Window>
