<UserControl x:Class="HeatconERP.Desktop.Controls.DashboardCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="White" BorderBrush="#e0e0e0" BorderThickness="1" CornerRadius="4" 
            Padding="20" Margin="0,0,16,16" MinWidth="200">
        <StackPanel>
            <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       FontSize="12" Foreground="Gray" Margin="0,0,0,8"/>
            <TextBlock Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       FontSize="24" FontWeight="SemiBold"/>
        </StackPanel>
    </Border>
</UserControl>
