@page "/quality"
@using HeatconERP.Web.Services
@using HeatconERP.Web.Models
@inject AuthService Auth
@inject ApiClient Api
@inject NavigationManager Nav

<PageTitle>Quality Gates - HeatconERP</PageTitle>

<div class="bg-[#1a2233] border border-[#344465] px-6 py-3 flex items-center justify-between mb-4">
    <div class="flex items-center gap-3">
        <h1 class="text-xl font-bold text-white leading-none">Quality Gates</h1>
        <span class="bg-[#195de6]/20 text-[#195de6] text-[10px] font-bold px-2 py-0.5 rounded tracking-widest uppercase">Production</span>
    </div>
    <button class="bg-[#243047] hover:bg-[#344465] border border-[#344465] text-slate-300 py-1.5 px-4 text-xs font-bold rounded flex items-center gap-2" @onclick="LoadAsync">
        <span class="material-symbols-outlined text-sm">refresh</span> Refresh
    </button>
</div>

<div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
    <section class="lg:col-span-4 bg-[#111621] border border-[#344465] overflow-hidden flex flex-col min-h-[60vh]">
        <div class="p-4 border-b border-[#344465] bg-[#243047]/30 flex items-center justify-between">
            <div class="text-xs font-bold uppercase tracking-wider text-slate-100 flex items-center gap-2">
                <span class="material-symbols-outlined text-sm text-[#195de6]">assignment</span>
                Work Orders (Accepted)
            </div>
            <div class="text-[11px] text-slate-500">@_workOrders.Count</div>
        </div>
        <div class="p-4 border-b border-[#344465] bg-[#111621]/50">
            <label class="text-[10px] uppercase tracking-wider font-bold text-slate-500">Search</label>
            <input class="w-full bg-[#243047] border border-[#344465] rounded text-xs py-2 px-2 text-slate-200" placeholder="WO number" @bind="_search" @bind:after="ApplyFilter" />
        </div>
        <div class="flex-1 overflow-auto industrial-scrollbar min-h-0">
            @if (_loading)
            {
                <div class="p-8 text-slate-400 text-center">Loading...</div>
            }
            else if (!string.IsNullOrWhiteSpace(_listError))
            {
                <div class="p-4 text-rose-300 text-xs border-b border-[#344465] bg-rose-900/10">@_listError</div>
            }
            else if (_filtered.Count == 0)
            {
                <div class="p-10 text-center text-slate-500 text-sm">No accepted work orders found.</div>
            }
            else
            {
                <div class="p-4 space-y-3">
                    @foreach (var wo in _filtered.Take(200))
                    {
                        var selected = _selectedWoId == wo.Id;
                        <button type="button"
                                class="w-full text-left rounded-xl p-4 border transition-all backdrop-blur-md bg-white/5 hover:bg-white/10 shadow-[0_10px_30px_-12px_rgba(0,0,0,0.75)] @(selected ? "border-[#195de6]/70 ring-1 ring-[#195de6]/30" : "border-white/10 hover:border-white/20")"
                                @onclick="@(() => SelectAsync(wo.Id))">
                            <div class="flex items-start justify-between gap-3">
                                <div class="min-w-0">
                                    <div class="text-sm font-bold text-[#195de6] truncate">@wo.OrderNumber</div>
                                    <div class="text-[11px] text-slate-500 mt-1">Stage: <span class="text-slate-200 font-semibold">@wo.Stage</span></div>
                                </div>
                                <span class="px-2 py-0.5 rounded text-[10px] font-bold bg-[#243047]/60 border border-white/10 text-slate-300">WO</span>
                            </div>
                        </button>
                    }
                </div>
            }
        </div>
    </section>

    <aside class="lg:col-span-8 bg-[#111621] border border-[#344465] overflow-hidden flex flex-col min-h-[60vh]">
        <div class="p-4 border-b border-[#344465] bg-[#243047]/30 flex items-center justify-between gap-3">
            <div class="min-w-0">
                <div class="text-xs font-bold uppercase tracking-wider text-slate-100 flex items-center gap-2">
                    <span class="material-symbols-outlined text-sm text-[#195de6]">fact_check</span>
                    Quality Gate Detail
                </div>
                @if (_summary != null)
                {
                    <div class="text-[11px] text-slate-400 mt-1">
                        WO: <span class="text-slate-200 font-semibold">@_summary.WorkOrderNumber</span> Â· Current stage: <span class="text-slate-200 font-semibold">@_summary.CurrentStage</span>
                    </div>
                }
            </div>
        </div>

        <div class="flex-1 overflow-auto industrial-scrollbar p-4">
            @if (!string.IsNullOrWhiteSpace(_detailError))
            {
                <div class="p-3 border border-rose-500/20 bg-rose-900/15 text-rose-300 text-xs mb-4">@_detailError</div>
            }
            @if (!string.IsNullOrWhiteSpace(_actionSuccess))
            {
                <div class="p-3 border border-emerald-500/20 bg-emerald-900/10 text-emerald-300 text-xs mb-4">@_actionSuccess</div>
            }

            @if (_summary == null)
            {
                <div class="p-10 text-center text-slate-500 text-sm">Select a work order to view gates and record QC.</div>
            }
            else
            {
                <div class="mb-4 bg-[#243047]/20 border border-[#344465] p-3">
                    <div class="text-[10px] uppercase tracking-wider font-bold text-slate-500 mb-2">Gates</div>
                    <div class="grid grid-cols-2 md:grid-cols-3 xl:grid-cols-6 gap-2">
                        @foreach (var g in _summary.Gates)
                        {
                            var cls = g.GateStatus switch
                            {
                                "Passed" => "bg-emerald-600/15 text-emerald-300 border border-emerald-500/20",
                                "Failed" => "bg-rose-600/15 text-rose-300 border border-rose-500/20",
                                _ => "bg-amber-600/15 text-amber-300 border border-amber-500/20"
                            };
                            <div class="p-2 border border-[#344465] bg-[#111621]/40">
                                <div class="text-[10px] uppercase font-bold text-slate-500">@g.Stage</div>
                                <div class="mt-1">
                                    <span class="px-2 py-0.5 rounded text-[10px] font-bold @cls">@g.GateStatus</span>
                                </div>
                                <div class="text-[10px] text-slate-500 mt-2">
                                    Last: <span class="text-slate-200 font-semibold">@(g.LastResult ?? "--")</span>
                                </div>
                                @if (g.OpenNcrId.HasValue)
                                {
                                    <div class="text-[10px] text-rose-300 mt-1">NCR Open</div>
                                }
                            </div>
                        }
                    </div>
                </div>

                <div class="grid grid-cols-1 xl:grid-cols-12 gap-6">
                    <div class="xl:col-span-7 bg-[#243047]/10 border border-[#344465] p-4">
                        <div class="text-[10px] uppercase tracking-wider font-bold text-slate-500 mb-3">Record QC Check (Append-only)</div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="text-[10px] uppercase tracking-wider font-bold text-slate-500 block mb-1">Stage</label>
                                <select class="w-full bg-[#243047] border border-[#344465] rounded text-xs py-2 text-slate-200" @bind="_qcStage">
                                    @foreach (var g in _summary.Gates)
                                    {
                                        <option value="@g.Stage">@g.Stage</option>
                                    }
                                </select>
                            </div>
                            <div>
                                <label class="text-[10px] uppercase tracking-wider font-bold text-slate-500 block mb-1">Result</label>
                                <select class="w-full bg-[#243047] border border-[#344465] rounded text-xs py-2 text-slate-200" @bind="_qcResult">
                                    <option value="Pass">Pass</option>
                                    <option value="Fail">Fail</option>
                                </select>
                            </div>
                            <div class="md:col-span-2">
                                <label class="text-[10px] uppercase tracking-wider font-bold text-slate-500 block mb-1">Notes</label>
                                <textarea class="w-full bg-[#243047] border border-[#344465] rounded text-xs py-2 px-2 text-slate-200 h-20" @bind="_qcNotes"></textarea>
                            </div>
                            @if (_qcResult == "Fail")
                            {
                                <div class="md:col-span-2">
                                    <label class="text-[10px] uppercase tracking-wider font-bold text-slate-500 block mb-1">NCR Description (optional)</label>
                                    <input class="w-full bg-[#243047] border border-[#344465] rounded text-xs py-2 px-2 text-slate-200" @bind="_ncrDescription" />
                                </div>
                            }
                        </div>
                        <div class="mt-3 flex justify-end gap-2">
                            <button class="px-3 py-2 bg-[#195de6] hover:bg-[#195de6]/90 text-white text-xs font-bold rounded"
                                    @onclick="RecordQcAsync"
                                    disabled="@_saving">
                                @(_saving ? "Saving..." : "Record QC")
                            </button>
                        </div>
                        <div class="text-[11px] text-slate-500 mt-2">This writes an immutable QC event. Gates update automatically. Fail creates NCR.</div>
                    </div>

                    <div class="xl:col-span-5 bg-[#243047]/10 border border-[#344465] p-4">
                        <div class="flex items-center justify-between gap-3 mb-3">
                            <div class="text-[10px] uppercase tracking-wider font-bold text-slate-500">Open NCRs</div>
                            <button class="px-2 py-1 bg-[#243047] hover:bg-[#344465] border border-[#344465] text-slate-200 text-[10px] font-bold rounded"
                                    @onclick="LoadOpenNcrsAsync"
                                    disabled="@_ncrLoading">
                                @(_ncrLoading ? "Loading..." : "Refresh")
                            </button>
                        </div>

                        @if (_openNcrs.Count == 0)
                        {
                            <div class="text-slate-500 text-sm">No open NCRs.</div>
                        }
                        else
                        {
                            <div class="space-y-3">
                                @foreach (var n in _openNcrs)
                                {
                                    <div class="border border-rose-500/20 bg-rose-900/10 p-3">
                                        <div class="text-xs font-bold text-rose-300">NCR-@n.Id.ToString()[..8]</div>
                                        <div class="text-[11px] text-slate-400 mt-1">Stage: <span class="text-slate-200 font-semibold">@n.Stage</span></div>
                                        <div class="text-[11px] text-slate-400 mt-1">@n.Description</div>

                                        <div class="mt-3 grid grid-cols-1 md:grid-cols-2 gap-2">
                                            <div>
                                                <label class="text-[10px] uppercase tracking-wider font-bold text-slate-500 block mb-1">Disposition</label>
                                                <select class="w-full bg-[#243047] border border-[#344465] rounded text-xs py-2 text-slate-200" @bind="_closeDisposition">
                                                    <option value="Rework">Rework</option>
                                                    <option value="Scrap">Scrap</option>
                                                    <option value="UseAsIs">UseAsIs</option>
                                                </select>
                                            </div>
                                            <div>
                                                <label class="text-[10px] uppercase tracking-wider font-bold text-slate-500 block mb-1">Closure Notes</label>
                                                <input class="w-full bg-[#243047] border border-[#344465] rounded text-xs py-2 px-2 text-slate-200" @bind="_closeNotes" />
                                            </div>
                                        </div>

                                        <div class="mt-3 flex justify-end">
                                            <button class="px-3 py-2 bg-rose-600 hover:bg-rose-500 text-white text-xs font-bold rounded"
                                                    @onclick="@(() => CloseNcrAsync(n.Id))"
                                                    disabled="@_ncrClosing">
                                                @(_ncrClosing ? "Closing..." : "Close NCR")
                                            </button>
                                        </div>
                                        <div class="text-[11px] text-slate-500 mt-2">After closing, record a new <strong class="text-slate-200">Pass</strong> QC check for the same stage to unblock.</div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </aside>
</div>

@code {
    [SupplyParameterFromQuery(Name = "woId")]
    public Guid? QueryWorkOrderId { get; set; }

    private bool _loading = true;
    private string? _listError;

    private string _search = "";
    private List<WorkOrderCardDto> _workOrders = [];
    private List<WorkOrderCardDto> _filtered = [];

    private Guid? _selectedWoId;
    private WorkOrderQualitySummaryDto? _summary;
    private string? _detailError;
    private string? _actionSuccess;

    private string _qcStage = "Planning";
    private string _qcResult = "Pass";
    private string _qcNotes = "";
    private string _ncrDescription = "";
    private bool _saving;

    private bool _ncrLoading;
    private bool _ncrClosing;
    private List<NcrListDto> _openNcrs = [];
    private string _closeDisposition = "Rework";
    private string _closeNotes = "";

    protected override async Task OnInitializedAsync() => await LoadAsync();

    protected override async Task OnParametersSetAsync()
    {
        if (QueryWorkOrderId.HasValue && QueryWorkOrderId.Value != Guid.Empty && QueryWorkOrderId != _selectedWoId)
        {
            await SelectAsync(QueryWorkOrderId.Value);
        }
    }

    private async Task LoadAsync()
    {
        _loading = true;
        _listError = null;
        _detailError = null;
        _actionSuccess = null;
        StateHasChanged();

        var (items, err) = await Api.GetWorkOrdersWithErrorAsync(Auth.BaseUrl, sentToProduction: null, productionReceived: true, limit: 1000);
        _workOrders = (items ?? []).OrderByDescending(x => x.ProductionReceivedAt).ToList();
        _listError = err;
        ApplyFilter();

        _loading = false;
        StateHasChanged();

        if (QueryWorkOrderId.HasValue && QueryWorkOrderId.Value != Guid.Empty)
        {
            await SelectAsync(QueryWorkOrderId.Value);
            return;
        }

        if (_selectedWoId.HasValue) await SelectAsync(_selectedWoId.Value);
        else if (_filtered.Count > 0) await SelectAsync(_filtered[0].Id);
    }

    private void ApplyFilter()
    {
        if (string.IsNullOrWhiteSpace(_search))
        {
            _filtered = _workOrders;
            return;
        }
        var s = _search.Trim();
        _filtered = _workOrders.Where(x => x.OrderNumber.Contains(s, StringComparison.OrdinalIgnoreCase)).ToList();
    }

    private async Task SelectAsync(Guid id)
    {
        _selectedWoId = id;
        _detailError = null;
        _actionSuccess = null;
        _summary = null;
        _openNcrs = [];

        // Keep URL in sync for deep-linking.
        if (QueryWorkOrderId != id)
            Nav.NavigateTo($"/quality?woId={id}", replace: true);

        _summary = await Api.GetWorkOrderQualitySummaryAsync(Auth.BaseUrl, id);
        if (_summary == null)
        {
            _detailError = "Failed to load quality gates.";
            StateHasChanged();
            return;
        }

        _qcStage = _summary.CurrentStage;
        _qcResult = "Pass";
        _qcNotes = "";
        _ncrDescription = "";

        await LoadOpenNcrsAsync();
        StateHasChanged();
    }

    private async Task RecordQcAsync()
    {
        if (!_selectedWoId.HasValue) return;
        _saving = true;
        _detailError = null;
        _actionSuccess = null;
        StateHasChanged();

        try
        {
            var req = new RecordQualityCheckRequest(
                Stage: _qcStage,
                Result: _qcResult,
                Notes: string.IsNullOrWhiteSpace(_qcNotes) ? null : _qcNotes.Trim(),
                CreatedBy: Auth.CurrentUser?.Username,
                NcrDescription: _qcResult == "Fail" && !string.IsNullOrWhiteSpace(_ncrDescription) ? _ncrDescription.Trim() : null);

            var (res, err) = await Api.RecordWorkOrderQualityCheckAsync(Auth.BaseUrl, _selectedWoId.Value, req);
            if (res == null)
            {
                _detailError = err ?? "Failed to record QC.";
                return;
            }

            _actionSuccess = $"QC recorded. Gate is now {res.GateStatus}.";
            _summary = await Api.GetWorkOrderQualitySummaryAsync(Auth.BaseUrl, _selectedWoId.Value);
            await LoadOpenNcrsAsync();
        }
        finally
        {
            _saving = false;
            StateHasChanged();
        }
    }

    private async Task LoadOpenNcrsAsync()
    {
        if (!_selectedWoId.HasValue) return;
        _ncrLoading = true;
        StateHasChanged();
        try
        {
            _openNcrs = (await Api.GetWorkOrderNcrsAsync(Auth.BaseUrl, _selectedWoId.Value, status: "Open"))?.ToList() ?? [];
        }
        finally
        {
            _ncrLoading = false;
            StateHasChanged();
        }
    }

    private async Task CloseNcrAsync(Guid ncrId)
    {
        if (!_selectedWoId.HasValue) return;
        _ncrClosing = true;
        _detailError = null;
        _actionSuccess = null;
        StateHasChanged();

        try
        {
            var req = new CloseNcrRequest(_closeDisposition, string.IsNullOrWhiteSpace(_closeNotes) ? null : _closeNotes.Trim(), Auth.CurrentUser?.Username);
            var (ok, err) = await Api.CloseNcrAsync(Auth.BaseUrl, _selectedWoId.Value, ncrId, req);
            if (!ok)
            {
                _detailError = err ?? "Failed to close NCR.";
                return;
            }
            _closeNotes = "";
            _actionSuccess = "NCR closed. Record a PASS QC check for that stage to unblock.";
            _summary = await Api.GetWorkOrderQualitySummaryAsync(Auth.BaseUrl, _selectedWoId.Value);
            await LoadOpenNcrsAsync();
        }
        finally
        {
            _ncrClosing = false;
            StateHasChanged();
        }
    }
}
