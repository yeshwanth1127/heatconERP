@page "/issue-materials"
@page "/issued-materials"
@using HeatconERP.Web.Services
@using HeatconERP.Web.Models
@inject AuthService Auth
@inject ApiClient Api

<PageTitle>Issued Materials - HeatconERP</PageTitle>

<div class="bg-[#1a2233] border border-[#344465] px-6 py-3 flex items-center justify-between mb-4">
    <div class="flex items-center gap-3">
        <h1 class="text-xl font-bold text-white leading-none">Issued Materials</h1>
        <span class="bg-[#195de6]/20 text-[#195de6] text-[10px] font-bold px-2 py-0.5 rounded tracking-widest uppercase">Store</span>
    </div>
    <button class="bg-[#243047] hover:bg-[#344465] border border-[#344465] text-slate-300 py-1.5 px-4 text-xs font-bold rounded flex items-center gap-2" @onclick="LoadAsync">
        <span class="material-symbols-outlined text-sm">refresh</span> Refresh
    </button>
</div>

<div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
    <section class="lg:col-span-5 flex flex-col gap-6 min-h-[60vh]">
        <div class="bg-[#111621] border border-[#344465] overflow-hidden flex flex-col">
            <div class="p-3 border-b border-[#344465] bg-[#243047]/30 flex items-center justify-between">
                <div class="text-xs font-bold uppercase tracking-wider text-slate-100 flex items-center gap-2">
                    <span class="material-symbols-outlined text-sm text-[#195de6]">outbox</span>
                    To Issue (Approved + Allocated)
                </div>
                <div class="text-[11px] text-slate-500">@_toIssue.Count</div>
            </div>
            <div class="p-3 border-b border-[#344465] bg-[#111621]/50">
                <label class="text-[10px] uppercase tracking-wider font-bold text-slate-500">Search</label>
                <input class="w-full bg-[#243047] border border-[#344465] rounded text-xs py-2 px-2 text-slate-200"
                       placeholder="Work order / SRS id"
                       @bind="_search" @bind:after="ApplyFilter" />
            </div>
            <div class="flex-1 overflow-auto industrial-scrollbar min-h-[240px]">
                @if (_loading)
                {
                    <div class="p-8 text-slate-400 text-center">Loading...</div>
                }
                else if (!string.IsNullOrWhiteSpace(_listError))
                {
                    <div class="p-4 text-rose-300 text-xs border-b border-[#344465] bg-rose-900/10">@_listError</div>
                }
                else if (_toIssueFiltered.Count == 0)
                {
                    <div class="p-10 text-center text-slate-500 text-sm">Nothing to issue right now.</div>
                }
                else
                {
                    <div class="p-4 space-y-3">
                        @foreach (var s in _toIssueFiltered)
                        {
                            var selected = _selectedId == s.Id;
                            <button type="button"
                                    class="w-full text-left rounded-xl p-4 border transition-all
                                           backdrop-blur-md bg-white/5 hover:bg-white/10
                                           shadow-[0_10px_30px_-12px_rgba(0,0,0,0.75)]
                                           @(selected ? "border-[#195de6]/70 ring-1 ring-[#195de6]/30" : "border-white/10 hover:border-white/20")"
                                    @onclick="@(() => SelectAsync(s.Id))">
                                <div class="flex items-start justify-between gap-3">
                                    <div class="min-w-0">
                                        <div class="text-sm font-bold text-[#195de6] truncate">SRS-@s.Id.ToString()[..8]</div>
                                        <div class="text-[11px] text-slate-400 mt-1">WO: <span class="text-slate-200 font-semibold">@s.WorkOrderNumber</span></div>
                                        <div class="text-[11px] text-slate-500 mt-1">@s.CreatedAt.ToLocalTime().ToString("dd MMM HH:mm")</div>
                                    </div>
                                    <span class="px-2 py-0.5 rounded text-[10px] font-bold bg-[#243047]/60 border border-white/10 text-slate-300">@s.Status</span>
                                </div>
                            </button>
                        }
                    </div>
                }
            </div>
        </div>

        <div class="bg-[#111621] border border-[#344465] overflow-hidden flex flex-col">
            <div class="p-3 border-b border-[#344465] bg-[#243047]/30 flex items-center justify-between">
                <div class="text-xs font-bold uppercase tracking-wider text-slate-100 flex items-center gap-2">
                    <span class="material-symbols-outlined text-sm text-emerald-400">history</span>
                    Consumed History
                </div>
                <div class="text-[11px] text-slate-500">@_consumed.Count</div>
            </div>
            <div class="flex-1 overflow-auto industrial-scrollbar min-h-[240px]">
                @if (_loading)
                {
                    <div class="p-8 text-slate-400 text-center">Loading...</div>
                }
                else if (_consumedFiltered.Count == 0)
                {
                    <div class="p-10 text-center text-slate-500 text-sm">No consumed SRS yet.</div>
                }
                else
                {
                    <div class="p-4 space-y-3">
                        @foreach (var s in _consumedFiltered)
                        {
                            var selected = _selectedId == s.Id;
                            <button type="button"
                                    class="w-full text-left rounded-xl p-4 border transition-all
                                           backdrop-blur-md bg-white/5 hover:bg-white/10
                                           shadow-[0_10px_30px_-12px_rgba(0,0,0,0.75)]
                                           @(selected ? "border-emerald-400/50 ring-1 ring-emerald-400/20" : "border-white/10 hover:border-white/20")"
                                    @onclick="@(() => SelectAsync(s.Id))">
                                <div class="flex items-start justify-between gap-3">
                                    <div class="min-w-0">
                                        <div class="text-sm font-bold text-emerald-300 truncate">SRS-@s.Id.ToString()[..8]</div>
                                        <div class="text-[11px] text-slate-400 mt-1">WO: <span class="text-slate-200 font-semibold">@s.WorkOrderNumber</span></div>
                                        <div class="text-[11px] text-slate-500 mt-1">@s.CreatedAt.ToLocalTime().ToString("dd MMM HH:mm")</div>
                                    </div>
                                    <span class="px-2 py-0.5 rounded text-[10px] font-bold bg-emerald-900/20 border border-emerald-500/20 text-emerald-300">@s.Status</span>
                                </div>
                            </button>
                        }
                    </div>
                }
            </div>
        </div>
    </section>

    <aside class="lg:col-span-7 bg-[#111621] border border-[#344465] overflow-hidden flex flex-col min-h-[60vh]">
        <div class="p-3 border-b border-[#344465] bg-[#243047]/30 flex items-center justify-between gap-3">
            <div class="min-w-0">
                <div class="text-xs font-bold uppercase tracking-wider text-slate-100 flex items-center gap-2">
                    <span class="material-symbols-outlined text-sm text-[#195de6]">assignment</span>
                    Issued Materials Detail
                </div>
                @if (_detail != null)
                {
                    <div class="text-[11px] text-slate-400 mt-1">
                        SRS-@_detail.Id.ToString()[..8] Â· WO: <span class="text-slate-200 font-semibold">@_detail.WorkOrderNumber</span>
                    </div>
                }
            </div>
            <div class="flex items-center gap-2 shrink-0">
                @if (_detail != null && !string.Equals(_detail.Status, "Consumed", StringComparison.OrdinalIgnoreCase))
                {
                    <button class="px-3 py-2 bg-emerald-600 hover:bg-emerald-500 text-white text-xs font-bold rounded"
                            @onclick="ConsumeAsync"
                            disabled="@_consuming">
                        @(_consuming ? "Consuming..." : "Mark Consumed")
                    </button>
                }
            </div>
        </div>

        <div class="flex-1 overflow-auto industrial-scrollbar p-4">
            @if (!string.IsNullOrWhiteSpace(_detailError))
            {
                <div class="p-3 border border-rose-500/20 bg-rose-900/15 text-rose-300 text-xs mb-4">@_detailError</div>
            }
            @if (!string.IsNullOrWhiteSpace(_success))
            {
                <div class="p-3 border border-emerald-500/20 bg-emerald-900/10 text-emerald-300 text-xs mb-4">@_success</div>
            }

            @if (_detail == null)
            {
                <div class="p-10 text-center text-slate-500 text-sm">Select an SRS to see allocations.</div>
            }
            else
            {
                <div class="bg-[#243047]/20 border border-[#344465] p-3 mb-4">
                    <div class="text-[10px] uppercase tracking-wider font-bold text-slate-500 mb-2">Allocations (Batch-level)</div>
                    <table class="w-full border-collapse text-[11px]">
                        <thead>
                        <tr class="text-slate-500 border-b border-[#344465]">
                            <th class="text-left py-2 pr-2">SKU</th>
                            <th class="text-left py-2 pr-2">Grade</th>
                            <th class="text-left py-2 pr-2">Size</th>
                            <th class="text-left py-2 pr-2">Batch</th>
                            <th class="text-right py-2 pr-2 w-24">Reserved</th>
                            <th class="text-right py-2 pr-2 w-24">Consumed</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var li in _detail.LineItems)
                        {
                            if (li.Allocations.Count == 0) continue;
                            foreach (var a in li.Allocations)
                            {
                                <tr class="border-b border-[#344465]/30">
                                    <td class="py-2 pr-2 text-slate-200 font-semibold">@li.Sku</td>
                                    <td class="py-2 pr-2 text-slate-400">@li.Grade</td>
                                    <td class="py-2 pr-2 text-slate-400">@li.Size</td>
                                    <td class="py-2 pr-2 text-slate-200 font-bold">@a.BatchNumber</td>
                                    <td class="py-2 pr-2 text-right text-slate-200 font-bold">@a.ReservedQuantity</td>
                                    <td class="py-2 pr-2 text-right text-slate-200 font-bold">@a.ConsumedQuantity</td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                    <div class="text-[11px] text-slate-500 mt-2">
                        This view is driven by <span class="text-slate-200 font-semibold">SRSBatchAllocations</span> and shows exactly which batch was allocated to which SRS.
                    </div>
                </div>
            }
        </div>
    </aside>
</div>

@code {
    private bool _loading = true;
    private string? _listError;
    private string _search = "";

    private List<SrsListDto> _toIssue = [];
    private List<SrsListDto> _toIssueFiltered = [];
    private List<SrsListDto> _consumed = [];
    private List<SrsListDto> _consumedFiltered = [];

    private Guid? _selectedId;
    private SrsDetailDto? _detail;
    private string? _detailError;

    private bool _consuming;
    private string? _success;

    protected override async Task OnInitializedAsync() => await LoadAsync();

    private async Task LoadAsync()
    {
        _loading = true;
        _listError = null;
        _detailError = null;
        _success = null;
        StateHasChanged();

        var allApproved = (await Api.GetSrsListAsync(Auth.BaseUrl, status: "Approved", workOrderId: null, limit: 500))?.ToList() ?? [];
        var allConsumed = (await Api.GetSrsListAsync(Auth.BaseUrl, status: "Consumed", workOrderId: null, limit: 500))?.ToList() ?? [];

        // Only show SRS that has at least one allocation (approved+allocated).
        // Keep it simple (detail call per row) because list sizes are small in early rollout.
        var withAlloc = new List<SrsListDto>();
        foreach (var s in allApproved.Take(200))
        {
            var d = await Api.GetSrsByIdAsync(Auth.BaseUrl, s.Id);
            if (d?.LineItems?.Any(li => li.Allocations.Count > 0) == true)
                withAlloc.Add(s);
        }

        _toIssue = withAlloc;
        _consumed = allConsumed;
        ApplyFilter();

        _loading = false;
        StateHasChanged();

        if (_selectedId.HasValue)
            await SelectAsync(_selectedId.Value);
        else if (_toIssueFiltered.Count > 0)
            await SelectAsync(_toIssueFiltered[0].Id);
        else if (_consumedFiltered.Count > 0)
            await SelectAsync(_consumedFiltered[0].Id);
    }

    private void ApplyFilter()
    {
        if (string.IsNullOrWhiteSpace(_search))
        {
            _toIssueFiltered = _toIssue;
            _consumedFiltered = _consumed;
            return;
        }
        var s = _search.Trim();
        _toIssueFiltered = _toIssue.Where(x =>
                x.WorkOrderNumber.Contains(s, StringComparison.OrdinalIgnoreCase)
                || x.Id.ToString().Contains(s, StringComparison.OrdinalIgnoreCase))
            .ToList();

        _consumedFiltered = _consumed.Where(x =>
                x.WorkOrderNumber.Contains(s, StringComparison.OrdinalIgnoreCase)
                || x.Id.ToString().Contains(s, StringComparison.OrdinalIgnoreCase))
            .ToList();
    }

    private async Task SelectAsync(Guid id)
    {
        _selectedId = id;
        _detailError = null;
        _success = null;
        _detail = await Api.GetSrsByIdAsync(Auth.BaseUrl, id);
        if (_detail == null) _detailError = "Failed to load SRS details.";
        StateHasChanged();
    }

    private async Task ConsumeAsync()
    {
        if (_detail == null) return;
        _consuming = true;
        _detailError = null;
        _success = null;
        StateHasChanged();

        try
        {
            var (ok, err) = await Api.ConsumeSrsAsync(Auth.BaseUrl, _detail.Id, Auth.CurrentUser?.Username);
            if (!ok)
            {
                _detailError = err ?? "Failed to consume SRS allocations.";
                return;
            }

            _success = "Materials consumed. SRS status updated to Consumed.";
            await LoadAsync();
        }
        finally
        {
            _consuming = false;
            StateHasChanged();
        }
    }
}


