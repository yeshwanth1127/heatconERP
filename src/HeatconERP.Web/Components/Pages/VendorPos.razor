@page "/vendor-pos"
@using HeatconERP.Web.Services
@using HeatconERP.Web.Models
@inject AuthService Auth
@inject ApiClient Api
@inject NavigationManager Nav

<PageTitle>Vendor POs - HeatconERP</PageTitle>

<div class="bg-[#1a2233] border border-[#344465] px-6 py-3 flex items-center justify-between mb-4">
    <div class="flex items-center gap-3">
        <h1 class="text-xl font-bold text-white leading-none">Vendor Purchase Orders (View)</h1>
        <span class="bg-[#195de6]/20 text-[#195de6] text-[10px] font-bold px-2 py-0.5 rounded tracking-widest uppercase">Visibility</span>
    </div>
    <button class="bg-[#243047] hover:bg-[#344465] border border-[#344465] text-slate-300 py-1.5 px-4 text-xs font-bold rounded flex items-center gap-2" @onclick="LoadAsync">
        <span class="material-symbols-outlined text-sm">refresh</span> Refresh
    </button>
</div>

@if (_loading)
{
    <div class="p-8 text-slate-400">Loading...</div>
}
else
{
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
        <section class="lg:col-span-5 bg-[#111621] border border-[#344465] overflow-hidden flex flex-col min-h-[60vh]">
            <div class="p-4 border-b border-[#344465] bg-[#243047]/30 flex items-center justify-between">
                <div class="text-xs font-bold uppercase tracking-wider text-slate-100 flex items-center gap-2">
                    <span class="material-symbols-outlined text-sm text-[#195de6]">list</span>
                    Recent Vendor POs
                </div>
                <div class="text-[11px] text-slate-500">@_list.Count</div>
            </div>
            <div class="p-4 border-b border-[#344465] bg-[#111621]/50">
                <label class="text-[10px] uppercase tracking-wider font-bold text-slate-500">Search</label>
                <input class="w-full bg-[#243047] border border-[#344465] rounded text-xs py-2 px-2 text-slate-200"
                       placeholder="Vendor / PO id"
                       @bind="_search" @bind:after="ApplyFilter" />
            </div>
            <div class="flex-1 overflow-auto industrial-scrollbar min-h-0">
                @if (!string.IsNullOrEmpty(_listError))
                {
                    <div class="p-4 text-red-400 text-xs border-b border-[#344465] bg-[#111621]/60">@_listError</div>
                }
                @if (_filtered.Count == 0)
                {
                    <div class="p-10 text-center text-slate-500 text-sm">No vendor POs found.</div>
                }
                else
                {
                    <div class="p-4 space-y-3">
                        @foreach (var po in _filtered)
                        {
                            var selected = _selectedId == po.Id;
                            <button type="button"
                                    class="w-full text-left rounded-xl p-4 border transition-all backdrop-blur-md bg-white/5 hover:bg-white/10 shadow-[0_10px_30px_-12px_rgba(0,0,0,0.75)] @(selected ? "border-[#195de6]/70 ring-1 ring-[#195de6]/30" : "border-white/10 hover:border-white/20")"
                                    @onclick="@(() => SelectAsync(po.Id))">
                                <div class="flex items-start justify-between gap-3">
                                    <div class="min-w-0">
                                        <div class="text-sm font-bold text-[#195de6] truncate">PO-@po.Id.ToString()[..8]</div>
                                        <div class="text-[11px] text-slate-400 mt-1">@po.VendorName</div>
                                        <div class="text-[11px] text-slate-500 mt-1">@po.OrderDate.ToLocalTime().ToString("dd MMM yyyy") · @po.LineCount lines · @po.TotalQuantity qty</div>
                                    </div>
                                    <span class="px-2 py-0.5 rounded text-[10px] font-bold bg-[#243047]/60 border border-white/10 text-slate-300">@po.Status</span>
                                </div>
                            </button>
                        }
                    </div>
                }
            </div>
        </section>

        <aside class="lg:col-span-7 bg-[#111621] border border-[#344465] overflow-hidden flex flex-col min-h-[60vh]">
            <div class="p-4 border-b border-[#344465] bg-[#243047]/30">
                <div class="text-xs font-bold uppercase tracking-wider text-slate-100 flex items-center gap-2">
                    <span class="material-symbols-outlined text-sm text-[#195de6]">description</span>
                    PO Details
                </div>
                @if (_detail != null)
                {
                    <div class="text-[11px] text-slate-400 mt-1">
                        PO-@_detail.Id.ToString()[..8] · Vendor: <span class="text-slate-200 font-semibold">@_detail.VendorName</span>
                    </div>
                }
            </div>

            <div class="flex-1 overflow-auto industrial-scrollbar p-4">
                @if (!string.IsNullOrEmpty(_detailError))
                {
                    <div class="p-3 border border-rose-500/20 bg-rose-900/15 text-rose-300 text-xs mb-4">@_detailError</div>
                }
                @if (!string.IsNullOrEmpty(_actionSuccess))
                {
                    <div class="p-3 border border-emerald-500/20 bg-emerald-900/10 text-emerald-300 text-xs mb-4">@_actionSuccess</div>
                }

                @if (_detail == null)
                {
                    <div class="p-10 text-center text-slate-500 text-sm">Select a PO to view line items.</div>
                }
                else
                {
                    <div class="text-[11px] text-slate-400 mb-3">
                        Date: <span class="text-slate-200 font-semibold">@_detail.OrderDate.ToLocalTime().ToString("dd MMM yyyy")</span><br />
                        Status: <span class="text-slate-200 font-semibold">@_detail.Status</span>
                    </div>

                    <div class="mb-3 flex items-center gap-2">
                        <button class="px-3 py-2 bg-[#195de6] hover:bg-[#195de6]/90 text-white text-xs font-bold rounded flex items-center gap-2"
                                @onclick="SendPoAndCreateInvoiceAsync"
                                disabled="@_sending">
                            <span class="material-symbols-outlined text-sm">send</span>
                            <span>@(_sending ? "Sending..." : "Send PO → Create Invoice")</span>
                        </button>
                        <button class="px-3 py-2 bg-[#344465] hover:bg-[#243047] text-white text-xs font-bold rounded"
                                type="button"
                                @onclick="@(() => Nav.NavigateTo("/vendor-invoices"))">
                            View Vendor Invoices
                        </button>
                    </div>

                    <div class="bg-[#243047]/20 border border-[#344465] p-3">
                        <div class="text-[10px] uppercase tracking-wider font-bold text-slate-500 mb-2">Line Items</div>
                        @if (_detail.Lines.Count == 0)
                        {
                            <div class="text-xs text-slate-500">No line items.</div>
                        }
                        else
                        {
                            <table class="w-full border-collapse text-[11px]">
                                <thead>
                                <tr class="text-slate-500 border-b border-[#344465]">
                                    <th class="text-left py-2 pr-2">SKU</th>
                                    <th class="text-left py-2 pr-2">Grade</th>
                                    <th class="text-left py-2 pr-2">Size</th>
                                    <th class="text-right py-2 pr-2 w-24">Qty</th>
                                    <th class="text-right py-2 pr-2 w-24">UnitPrice</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var li in _detail.Lines)
                                {
                                    <tr class="border-b border-[#344465]/30">
                                        <td class="py-2 pr-2 text-slate-200 font-semibold">@li.Sku</td>
                                        <td class="py-2 pr-2 text-slate-400">@li.Grade</td>
                                        <td class="py-2 pr-2 text-slate-400">@li.Size</td>
                                        <td class="py-2 pr-2 text-right text-slate-200 font-bold">@li.OrderedQuantity</td>
                                        <td class="py-2 pr-2 text-right text-slate-200 font-bold">@li.UnitPrice</td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        }
                    </div>
                }
            </div>
        </aside>
    </div>
}

@code {
    [Microsoft.AspNetCore.Components.SupplyParameterFromQuery(Name = "id")]
    public Guid? PoId { get; set; }

    private bool _loading = true;
    private string? _listError;
    private string? _detailError;
    private string? _actionSuccess;
    private bool _sending;

    private string _search = "";
    private List<VendorPoListItemDto> _list = [];
    private List<VendorPoListItemDto> _filtered = [];

    private Guid? _selectedId;
    private VendorPoDetailDto? _detail;

    protected override async Task OnInitializedAsync() => await LoadAsync();

    protected override async Task OnParametersSetAsync()
    {
        if (PoId.HasValue && PoId.Value != Guid.Empty && _selectedId != PoId)
        {
            _selectedId = PoId.Value;
            await LoadAsync();
        }
    }

    private async Task LoadAsync()
    {
        _loading = true;
        _listError = null;
        _detailError = null;
        StateHasChanged();

        _list = (await Api.GetVendorPosAsync(Auth.BaseUrl, limit: 200))?.ToList() ?? [];
        ApplyFilter();

        if (PoId.HasValue && PoId.Value != Guid.Empty)
            _selectedId = PoId.Value;

        if (_selectedId.HasValue)
            _detail = await Api.GetVendorPoByIdAsync(Auth.BaseUrl, _selectedId.Value);

        _loading = false;
        StateHasChanged();
    }

    private void ApplyFilter()
    {
        if (string.IsNullOrWhiteSpace(_search))
        {
            _filtered = _list;
            return;
        }

        var s = _search.Trim();
        _filtered = _list
            .Where(x => x.VendorName.Contains(s, StringComparison.OrdinalIgnoreCase)
                        || x.Id.ToString().Contains(s, StringComparison.OrdinalIgnoreCase))
            .ToList();
    }

    private async Task SelectAsync(Guid id)
    {
        _selectedId = id;
        _detailError = null;
        _actionSuccess = null;
        StateHasChanged();

        _detail = await Api.GetVendorPoByIdAsync(Auth.BaseUrl, id);
        if (_detail == null) _detailError = "Failed to load PO details.";
        StateHasChanged();
    }

    private async Task SendPoAndCreateInvoiceAsync()
    {
        if (_detail == null) return;

        _sending = true;
        _detailError = null;
        _actionSuccess = null;
        StateHasChanged();

        try
        {
            // Placeholder behavior: sending PO creates a vendor invoice immediately.
            var (inv, err) = await Api.CreateVendorInvoiceFromPoAsync(
                Auth.BaseUrl,
                _detail.Id,
                new CreateVendorInvoiceFromPoRequest(InvoiceNumber: null, InvoiceDate: DateTime.UtcNow));

            if (inv == null)
            {
                _detailError = err ?? "Failed to create vendor invoice.";
                return;
            }

            _actionSuccess = $"Vendor invoice created: {inv.InvoiceNumber}. Opening invoices…";
            // Navigate so the invoice is immediately visible in the Vendor Invoices tab.
            Nav.NavigateTo($"/vendor-invoices?id={inv.Id}");
        }
        finally
        {
            _sending = false;
            StateHasChanged();
        }
    }
}


