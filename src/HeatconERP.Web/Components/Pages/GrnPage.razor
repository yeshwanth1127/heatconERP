    private async Task SubmitAsync()
    {
        _formError = null;
        _formSuccess = null;
        _listError = null;

        if (!_vendorId.HasValue) { _formError = "Vendor is required."; return; }
        if (string.IsNullOrWhiteSpace(_invoiceNumber)) { _formError = "Invoice number is required."; return; }
        if (_receivedDate == default) { _formError = "Received date is invalid."; return; }

        if (_draftGrn != null)
        {
            if (_draftLines.Count == 0) { _formError = "No draft lines found."; return; }
            if (_draftLines.Any(l => string.IsNullOrWhiteSpace(l.BatchNumber))) { _formError = "Batch number is required for all lines."; return; }
            if (_draftLines.Any(l => l.QuantityReceived <= 0)) { _formError = "Quantity must be > 0 for all lines."; return; }
        }
        else
        {
            var lines = _lines
                .Select(kv => new ReceiveDirectGrnLine(kv.Key, kv.Value.BatchNumber ?? "", kv.Value.QuantityReceived, kv.Value.UnitPrice))
                .ToList();

            if (lines.Count == 0) { _formError = "Select at least one material line."; return; }
            if (lines.Any(l => string.IsNullOrWhiteSpace(l.BatchNumber))) { _formError = "Batch number is required for all selected lines."; return; }
            if (lines.Any(l => l.QuantityReceived <= 0)) { _formError = "Quantity must be > 0 for all selected lines."; return; }
        }

        _submitting = true;
        StateHasChanged();
        try
        {
            if (_draftGrn != null)
            {
                var req = new SubmitGrnDraftRequest(
                    InvoiceNumber: _invoiceNumber.Trim(),
                    ReceivedDate: _receivedDate,
                    Lines: _draftLines.Select(l => new SubmitGrnDraftLine(l.GrnLineItemId, l.BatchNumber ?? "", l.QuantityReceived, l.UnitPrice)).ToList());

                var (res, err) = await Api.SubmitGrnDraftAsync(Auth.BaseUrl, _draftGrn.Id, req);
                if (res == null)
                {
                    _formError = err ?? "Failed to submit GRN draft.";
                    return;
                }

                _formSuccess = $"GRN submitted: GRN-{res.GrnId.ToString()[..8]} · Created {res.CreatedBatchIds.Count} batch(es).";
                _selectedGrnId = res.GrnId;
                _selectedGrn = await Api.GetGrnByIdAsync(Auth.BaseUrl, res.GrnId);
            }
            else
            {
                var lines = _lines
                    .Select(kv => new ReceiveDirectGrnLine(kv.Key, kv.Value.BatchNumber ?? "", kv.Value.QuantityReceived, kv.Value.UnitPrice))
                    .ToList();

                var (res, err) = await Api.CreateDirectGrnAsync(Auth.BaseUrl, new CreateDirectGrnRequest(_vendorId.Value, _receivedDate, _invoiceNumber.Trim(), lines));
                if (res == null)
                {
                    _formError = err ?? "Failed to create GRN.";
                    return;
                }

                _formSuccess = $"GRN created: GRN-{res.GrnId.ToString()[..8]} · Created {res.CreatedBatchIds.Count} batch(es).";
                _lines.Clear();
                _invoiceNumber = "";

                _grns = (await Api.GetGrnsAsync(Auth.BaseUrl, limit: 30))?.ToList() ?? [];
                _selectedGrnId = res.GrnId;
                _selectedGrn = await Api.GetGrnByIdAsync(Auth.BaseUrl, res.GrnId);
            }

            _grns = (await Api.GetGrnsAsync(Auth.BaseUrl, limit: 30))?.ToList() ?? [];

            // refresh materials totals so user sees availability increase
            _tree = (await Api.GetInventoryMaterialTreeAsync(Auth.BaseUrl))?.ToList() ?? [];
            ApplyFilter();
        }
        finally
        {
            _submitting = false;
            StateHasChanged();
        }
    }

